<h1>Listing job posts</h1>


<%= form_tag job_posts_path, :method => 'get' do %>


<table>
<tr>
<td>Title</td>
<td><%= text_field_tag :search_title, params[:search_title] %></td>
</tr>
<tr>
<td>Salary Range</td>
<td>
<%= text_field_tag :search_salmin, params[:search_salmin]  %>
to
<%= text_field_tag :search_salmax, params[:search_salmax]  %>
</td>
</tr>
<tr>
<td>
Zip
</td>
<td>
<%= text_field_tag :search_zip, params[:search_zip]  %>
</td>
</tr>
<tr>
<td>
<%= submit_tag "Search Jobs", :name => nil %>
</td>
</tr>

</table>

<% end %>





<table>
  <tr>
    <th>Title</th>
    <th>Salary</th>
    <th>Description</th>
    <th>Company</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @job_posts.each do |job_post| %>
  <tr>
    <td><%= job_post.title %></td>
    <td><%= job_post.salary %></td>
    <td><%= job_post.description %></td>
    <td><a href="/companies/<%= job_post.company_id %>"><%= Company.find(job_post.company_id).name%></a></td>
    <td><%= link_to 'Show', job_post %></td>
    <td><%= link_to 'Edit', edit_job_post_path(job_post) %></td>
    <td><%= link_to 'Destroy', job_post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Job post', new_job_post_path %>
